<div class="beat_vote_container">
  <% if current_user != nil && !current_user.voted?(beat) %>
    <%= link_to image_tag("fist_small.png"), "/beats/#{beat.id}/upvote", class: 'small-link upvote vote_link' %>
  <% elsif current_user != nil && current_user.voted?(beat) %>
    <%= link_to image_tag("fist_small.png", class: "voted_fist"), "/votes/#{current_user.get_vote(beat).id}", class: 'small-link downvote vote_link' %>
  <% else %>
    <p class="vote_link">Login to vote</p>
  <% end %>
  <p class="vote_count"><%= beat.votes.count %></p>
</div>