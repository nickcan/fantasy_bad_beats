<main class="user-container small-pad bord-box clearfix">
  <div class="profile-pic"></div>
  <aside class="about"></aside>
  <div id="accordion">
    <h3 class="acc-title">You have <%= @user.beats.count %> BadBeats</h3>
    <div class="acc-container">
      <% @user.beats.each do |beat| %>
        <section class="acc-content">
          <h3 class="beat-content"><%= beat.content %></h3>
          <p class="timestamps">Posted: <%= beat.created_at.strftime("%d %b, %Y") %></p>
          <% if current_user != nil && current_user.id == beat.user.id %>
            <%= link_to "Edit", edit_beat_path(beat), class: 'small-link' %>
            <%= link_to "Delete", beat_path(beat), method: :delete, class: 'small-link' %>
          <% end %>
          <hr>
        </section>
      <% end %>
    </div>
    <h3 class="acc-title">You have <%= @user.comments.count %> comments</h3>
    <div class="acc-container">
      <% @user.comments.each do |comment| %>
        <section class="acc-content">
          <h3 class="comment-content"><%= comment.content %></h3>
          <p class="timestamps">Posted: <%= comment.created_at.strftime("%d %b, %Y") %></p>
          <% if current_user != nil && current_user.id == comment.user.id %>
            <%= link_to "Delete", beat_comment_path(beat, comment), method: :delete, class: 'small-link' %>
          <% end %>
          <hr>
        </section>
      <% end %>
    </div>
  </div>
</main>