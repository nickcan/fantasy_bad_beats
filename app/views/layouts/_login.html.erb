<section class="login_lightbox">
  <h2 class="form_header">Login</h2>

  <%= form_tag '../log_in', class: "form" do %>
  <%= text_field_tag :email, nil, placeholder: "Email", class: "form_field" %>

  <%= password_field_tag :password, nil, placeholder: "Password", class: "form_field" %>

  <%= submit_tag "Log in", class: "form_button" %>
  <% end %>
</section>